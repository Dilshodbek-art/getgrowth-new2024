# Telegram Bot Configuration (existing)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Supabase Configuration for Comments System
# Get these from Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# IMPORTANT: Service Role Key - NEVER expose this to the client!
# This key bypasses Row Level Security and is used ONLY for admin operations
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Admin Password for Comment Deletion
# Users must enter this password to delete comments
ADMIN_PASSWORD=your_secure_admin_password_here
